<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stock.fundamental">
	
	<!-- 기업코드 리스트 -->
	<select id="codeList" resultType="fundamentalDTO">
		select code from enterprise_total
	</select>
	
	<!-- 기업 리스트 -->
	<select id="enterpriseList" resultType="fundamentalDTO">
		select code, name from enterprise_total
	</select>
	
	<!-- 기업 정보 -->
	<select id="enterpriseFinance" resultType="fundamentalDTO" parameterType="String">
		select DISTINCT t.name, f.* from ENTERPRISE_TOTAL t, ENTERPRISE_FINANCE f where t.code=f.code, f.code =#{f.code}
	</select>
	
	<!-- 기업 종가 -->
	<select id="stockClose" resultType="fundamentalDTO" parameterType="String">
		select * from StockClose_W where code =#{code}
	</select>
	
	<!-- BPS계산을 위한 기업정보 -->
	<select id="enterpriseFinance_BPS" resultType="fundamentalDTO" parameterType="String">
		select DISTINCT t.name, f.* from ENTERPRISE_TOTAL t, ENTERPRISE_FINANCE f where t.code=f.code, f.code =#{code}
	</select>

	<!-- EPS계산을 위한 기업정보 -->
	<select id="EnterpriseFinance_EPS" resultType="fundamentalDTO" parameterType="String">
		select DISTINCT t.name, f.* from ENTERPRISE_TOTAL t, ENTERPRISE_FINANCE f where t.code=f.code, f.code =#{code}
	</select>
</mapper>
	
