<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="stock.bigdata">
	<select id="topicnews" resultType="HashMap" >
		<!-- select * from hadoopTest2 -->
		select distinct stockname, namecount from hadoopTest2 order by namecount desc
	</select>
	
	<select id="industrynews" resultType="HashMap" parameterType="String">
		     select NAME, NCOUNT  from test where NDATE = #{ndate} order by ncount desc
		   <!--select distinct industryname, namecount from hadoopTest3 order by namecount desc-->
		
	</select>
</mapper>